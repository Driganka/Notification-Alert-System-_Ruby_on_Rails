<table>
  <% @messages.each do |message| %>
    <tr>
      <td><%= link_to message.title, message_path(message) %></td>
      <td><%= button_to 'Edit', edit_message_path(message), method: 'get'%></td>
      <td><%= button_to 'Remove', message_path(message), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Message", new_message_path %>
